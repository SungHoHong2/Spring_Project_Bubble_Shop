	<select id="getVisualImg" resultType="bean" parameterType="bean">
		<![CDATA[
		SELECT G_IMGHOTITEM, G_IMGSHOTITEM, G_CODE  FROM GOODS WHERE g_sell='Y' AND G_SHOW_LIST='Y' AND G_SHOW_HOT='Y'
